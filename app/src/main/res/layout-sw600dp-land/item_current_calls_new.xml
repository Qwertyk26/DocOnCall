<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/current_call"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:visibility="invisible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/fab_margin">

            <TextView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/fab_margin"
                android:background="@drawable/round_icon"
                android:gravity="center"
                android:textColor="@color/textWhite" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ФИО"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/call_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Заявка 228 - "
                        android:textSize="@dimen/textXSmall" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="прибыл к клиенту"
                        android:textColor="@color/selected"
                        android:textSize="@dimen/textXSmall" />

                    <TextView
                        android:id="@+id/summ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 000Р"
                        android:textSize="@dimen/textXSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Время ожидания "
                        android:textColor="@color/selected"
                        android:textSize="@dimen/textXSmall" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:00 - 13:00"
                        android:textSize="@dimen/textXSmall" />
                </LinearLayout>
                <TextView
                    android:id="@+id/call_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Альфа Страхование"
                    android:textColor="@color/selected"
                    android:textSize="@dimen/textXSmall" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerDark" />
    </LinearLayout>
</LinearLayout>